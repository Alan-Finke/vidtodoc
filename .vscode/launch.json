{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--infile", "ReclaimDemo.mp4",
                "--outfile", "ReclaimDemo.docx",
                "--verbose", "true"
            ]
        }
    ]
}